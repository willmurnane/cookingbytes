<UserControl x:Class="CookingBytes.Controls.Step"
             x:Name="TheStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <TextBlock Text="{Binding ElementName=TheStep, Path=StepNumber}"
                   HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap"
                   VerticalAlignment="Top"/>
        <TextBlock x:Name="Description" TextAlignment="Justify"
                   Text="{Binding Path=Description}" Margin="10,28,0,0" TextWrapping="Wrap" />
    </DockPanel>
</UserControl>
